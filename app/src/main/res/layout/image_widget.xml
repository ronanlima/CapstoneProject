<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:id="@+id/layout_widget"
    android:background="@drawable/background_widget_image"
    android:orientation="vertical">

    <TextView
        style="@style/TextWidgetStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="@string/title_project_widget"
        android:textColor="@color/colorPrimaryDark" />

    <ImageView
        android:id="@+id/widget_image"
        style="@style/WidgetStyle"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:contentDescription="@string/desc_last_selected_project"
        app:srcCompat="@drawable/img_project_default" />

</LinearLayout>