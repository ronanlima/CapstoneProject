<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.DarkActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/colorPrimary</item>
        <item name="colorPrimaryDark">@color/colorPrimaryDark</item>
        <item name="colorAccent">@color/colorAccent</item>
    </style>

    <style name="NoActionBar" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="android:statusBarColor">@color/colorPrimaryDark</item>
    </style>

    <style name="cardviewProject">
        <item name="android:height">@dimen/height_cardview_project</item>
        <item name="android:layout_marginLeft">@dimen/margin_left_cardview_project</item>
        <item name="android:layout_marginTop">@dimen/margin_top_cardview_project</item>
        <item name="android:layout_marginRight">@dimen/margin_right_cardview_project</item>
        <item name="android:layout_marginBottom">@dimen/margin_bottom_cardview_project</item>
        <item name="android:background">@android:color/white</item>
    </style>

    <style name="IVAdapter">
        <item name="android:layout_marginRight">@dimen/margin_right_iv_adapter</item>
        <item name="android:layout_marginEnd">@dimen/margin_end_iv_adapter</item>
        <item name="android:layout_marginTop">@dimen/margin_top_iv_adapter</item>
        <item name="android:layout_width">@dimen/width_iv_adapter</item>
        <item name="android:layout_height">@dimen/height_iv_adapter</item>
    </style>

    <style name="WidgetStyle">
        <item name="android:layout_marginLeft">@dimen/margin_left_widget</item>
        <item name="android:layout_marginStart">@dimen/margin_start_widget</item>
        <item name="android:layout_marginEnd">@dimen/margin_end_widget</item>
        <item name="android:layout_marginRight">@dimen/margin_right_widget</item>
    </style>

    <style name="TextWidgetStyle" parent="WidgetStyle">
        <item name="android:gravity">center</item>
        <item name="android:singleLine">false</item>
        <item name="android:textStyle">bold</item>
    </style>

</resources>
